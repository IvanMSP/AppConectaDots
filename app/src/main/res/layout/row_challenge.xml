<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/margin_small"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_challenge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="@dimen/activity_vertical_margin"
            android:paddingTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/container_holder"
            android:layout_toRightOf="@id/image_challenge">

            <TextView
                android:id="@+id/challenge_name"
                style="@style/LabelTitle"
                android:text="Title"
                android:paddingTop="10dp"
                android:layout_gravity="center_horizontal|right" />
            <TextView
                android:id="@+id/challenge_review"
                style="@style/LabelContent"
                android:layout_below="@+id/challenge_name"
                android:text="Subtitle"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>